import "maths.vector" for Vector3
import "archgraph.mesh" for Mesh
import "maths" for Matrix44

class Geometry
{
	init(polys)
	{
		this.mesh = Mesh()
		this.mesh.polys = polys
		this.mesh.rebuild()

		// transform
		this.trans = Matrix44.init()

		// material
		this.color = Vector3(1, 1, 1)
		this.texture = nil
	}

	new_instance()
	{
		var new = Geometry([])
		new.mesh = this.mesh
		new.texture = this.texture
		return new
	}
}